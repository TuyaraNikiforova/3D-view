<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <div class="search-container" id="search-container" style="display: none;">
            <input type="text" id="global-search" placeholder="Поиск...">
        </div>
		<div class="user-auth" id="user-auth">
			<% if (typeof user !== 'undefined' && user) { %>
				<div class="user-info">
					<span>Вы вошли как: <%= user.name %></span>
					<button id="logout-btn">Выйти</button>
				</div>
			<% } else { %>
				<div class="login-form">
					<input type="text" id="username" placeholder="Логин">
					<input type="password" id="password" placeholder="Пароль">
					<button id="login-btn" class="login-btn">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" style="margin-right: 5px;">
							<path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
						</svg>
						Войти
					</button>
				</div>
			<% } %>
		</div>			
        <nav>
            <ul>
                <li><a href="/" class="tab-link <%= activeTab === '3d-view' ? 'active' : '' %>" data-tab="3d-view">3D-графика</a></li>
                <li><a href="/table-view" class="tab-link <%= activeTab === 'table-view' ? 'active' : '' %>" data-tab="table-view">Таблица связей</a></li>
                <li><a href="/dashboard" class="tab-link <%= activeTab === 'dashboard' ? 'active' : '' %>" data-tab="dashboard">Детализация</a></li>
            </ul>
        </nav>
    </header>
    
    <main id="main-content">
        <%- body %>
    </main>

    <!-- Подключение скриптов -->
    <script src="https://cdn.jsdelivr.net/npm/three@0.132.2/build/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/three@0.132.2/examples/js/controls/OrbitControls.js"></script>

    <script src="/js/infoPanel.js" type="module"></script>
    <script src="/js/threeScene.js" type="module"></script>
    <script src="/js/main.js" type="module"></script>
    <script src="/js/filters.js"></script>
    <script src="/js/export.js"></script>
	<script src="/js/searchController.js"></script>
	<script src="/js/voiceAssistant.js"></script>
	<script src="/js/approvalManager.js"></script>
    
    <script>
        // Показываем поиск только для вкладки 3D-графика
        document.addEventListener('DOMContentLoaded', function() {
            function toggleSearchVisibility() {
                const searchContainer = document.getElementById('search-container');
                const activeTab = document.querySelector('.tab-link.active');
                
                if (activeTab && activeTab.dataset.tab === '3d-view') {
                    searchContainer.style.display = 'block';
                } else {
                    searchContainer.style.display = 'none';
                    // Очищаем поиск при переключении на другие вкладки
                    document.getElementById('global-search').value = '';
                }
            }
            
            // Инициализируем видимость при загрузке
            toggleSearchVisibility();
            
            // Обработчик кликов по вкладкам
            document.querySelectorAll('.tab-link').forEach(tab => {
                tab.addEventListener('click', function(e) {
                    // Даем время для переключения вкладки
                    setTimeout(toggleSearchVisibility, 100);
                });
            });
        });
    </script>
</body>
</html>